// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/anaconda
{
	"name": "Anaconda (Python 3)",
	"build": { 
		"context": "..",
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/dhoeric/features/act:1": {},
		"ghcr.io/flexwie/devcontainer-features/op:1": {},
		"ghcr.io/wxw-matt/devcontainer-features/command_runner:0": {},
		"ghcr.io/wxw-matt/devcontainer-features/script_runner:0": {},
		"ghcr.io/itsmechlark/features/1password:1": {
			"version": "latest"
		},
		"ghcr.io/elanhasson/devcontainer-features/dotnet-aspire-daily:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"DEVSENSE.composer-php-vscode",
				"bleastProgram.CPP-Compiler",
				"oleg-shilo.cs-script",
				"Dart-Code.dart-code",
				"Zaraclaj.dart-extensions-snippets",
				"PeterHdd.dartgettersetter",
				"cerebus.atasm-altirra-bridge"
			]
		}
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "python --version",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
